{% extends 'oai_base.xml' %}
{% load l10n %}
        {% load xml_util %}
        {% block contents %}
        {% for record in docs %}
	<record>
		<header{% if record.deleted == 'true' %} status="deleted"{% endif %}>
			<identifier>{{ id_prefix}}{{ record.id }}</identifier>
			<datestamp>{{ record.recordChangeDate|slice:"-10" }}</datestamp>
            <setSpec>doc-type:{{ record.oai_type }}</setSpec>
            {% for ddc in record.ddc %}
            <setSpec>ddc:{{ ddc }}</setSpec>
            {% endfor %}
		</header>
        {% if record.deleted != 'true' %}
		<metadata>
            {% autoescape off %}
                    {% if metadata_prefix == 'mods' %}{{ record.mods|uncdata }}{% endif %}
                    {% if metadata_prefix == 'dc' %}{{ record.dc|uncdata }}{% endif %}
            {% endautoescape %}
		</metadata>
        {% endif %}
	</record>
        {% endfor %}
        {% if resumption_token %}<resumptionToken cursor="{{ cursor|unlocalize }}" completeListSize="{{ complete_list_size|unlocalize }}"{% if not last_batch %} expirationDate="{{ expiration_date }}"{% endif %}>{% if not last_batch %}{{ resumption_token }}{% endif %}</resumptionToken>{% endif %}
        {% endblock contents %}